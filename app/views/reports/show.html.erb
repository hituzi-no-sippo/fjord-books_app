<h1><%= t('views.common.title_show', name: Report.model_name.human) %></h1>

<p>
  <strong><%= Report.human_attribute_name(:title) %>:</strong>
  <%= @report.title %>
</p>

<p>
  <strong><%= Report.human_attribute_name(:body) %>:</strong>
  <%= @report.body %>
</p>

<p>
  <strong><%= Report.human_attribute_name(:created_at) %>:</strong>
  <%= l @report.created_at %>
</p>

<p>
  <strong><%= Report.human_attribute_name(:updated_at) %>:</strong>
  <%= l @report.updated_at %>
</p>

<p>
  <strong><%= Report.human_attribute_name(:author) %>:</strong>
  <%= @report.author.name.empty? ? @report.author.email : @report.author.name %>
</p>

<h2><%= Comment.model_name.human %></h2>

<%= render 'comments/add_form', url: report_comments_path(@report) %>

<% if @report.author?(current_user.id) %>
  <%= link_to t('views.common.edit'), edit_report_path(@report) %> |
<% end %>
<%= link_to t('views.common.back'), reports_path %>
