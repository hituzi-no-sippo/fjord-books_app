<p id="notice"><%= notice %></p>

<h1><%= t(:books, scope: [:page_titles]) %></h1>

<table>
  <thead>
    <tr>
      <th><%= t(:title   , scope: [:activerecord, :attributes, :book]) %></th>
      <th><%= t(:memo    , scope: [:activerecord, :attributes, :book]) %></th>
      <th><%= t(:author  , scope: [:activerecord, :attributes, :book]) %></th>
      <th><%= t(:picture , scope: [:activerecord, :attributes, :book]) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.memo %></td>
        <td><%= book.author %></td>
        <td><%= book.picture %></td>
        <td><%= link_to t(:show,    scope: [:navigations]), book %></td>
        <td><%= link_to t(:edit,    scope: [:navigations]), edit_book_path(book) %></td>
        <td><%= link_to t(:destory, scope: [:navigations]), book, method: :delete, data: { confirm: t(:confirm, scope: [:messages]) } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t(:new_book, scope: [:navigations]), new_book_path %>
