<p id="notice"><%= notice %></p>

<p>
  <strong><%= t(:title, scope: [:activerecord, :attributes, :book]) %>:</strong>
  <%= @book.title %>
</p>

<p>
  <strong><%= t(:memo, scope: [:activerecord, :attributes, :book]) %>:</strong>
  <%= @book.memo %>
</p>

<p>
  <strong><%= t(:author, scope: [:activerecord, :attributes, :book]) %>:</strong>
  <%= @book.author %>
</p>

<p>
  <strong><%= t(:picture, scope: [:activerecord, :attributes, :book]) %>:</strong>
  <%= image_tag(@book.picture_url) if @book.picture.present? %>
</p>

